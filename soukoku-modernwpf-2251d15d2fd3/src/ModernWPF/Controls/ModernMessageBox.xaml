<cont:MessageBoxControl
    x:Class="ModernWPF.Controls.ModernMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:cont="clr-namespace:ModernWPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >

    <TextBox x:Name="txtMsg" Grid.Row="1" Margin="0 20"
            BorderThickness="0" Background="Transparent"
            IsReadOnly="True" MaxHeight="320" 
            VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
            Foreground="{DynamicResource ModernForeground}"
            TextWrapping="Wrap"></TextBox>
</cont:MessageBoxControl>
